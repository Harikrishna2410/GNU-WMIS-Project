<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:gravity="center"
          android:orientation="vertical">

            <ImageView
              android:id="@+id/exit_dialog_new_order_img"
              android:layout_width="80dp"
              android:layout_height="80dp"
              android:layout_gravity="center"
              android:src="@drawable/round_error_outline_blue_50_48dp" />

            <TextView
              android:id="@+id/order_exit_dialog_txtv_main_message"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="3dp"
              android:layout_marginBottom="3dp"
              android:fontFamily="@font/roboto"
              android:text="Exit?"
              android:textAlignment="center"
              android:textColor="#616161"
              android:textSize="22dp"
              android:textStyle="bold" />

            <TextView
              android:id="@+id/order_exit_dialog_txtv_message1"
              android:layout_width="249dp"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dp"
              android:fontFamily="@font/roboto"
              android:text="You have unsaved changes! If your leave, your changes will be lost."
              android:textAlignment="center"
              android:textColor="#616161"
              android:textSize="13dp" />

            <LinearLayout
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

                <Button
                  android:id="@+id/order_exit_dialog_btn_yes"
                  android:layout_width="70dp"
                  android:layout_height="30dp"
                  android:layout_margin="5dp"
                  android:background="@color/Primary"
                  android:fontFamily="@font/roboto"
                  android:text="YES"
                  android:textColor="@color/white"
                  android:textSize="13dp"
                  android:textStyle="bold" />

                <Button
                  android:id="@+id/order_exit_dialog_btn_no"
                  android:layout_width="70dp"
                  android:layout_height="30dp"
                  android:layout_margin="5dp"
                  android:background="@drawable/button_color_exit_dialog_no"
                  android:fontFamily="@font/roboto"
                  android:text="NO"
                  android:textColor="@color/white"
                  android:textSize="13dp"
                  android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>